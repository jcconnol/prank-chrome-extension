{
    "manifest_version": 2,
    "name": "Prankware",
    "description": "This extension allows for the setting of pranks.",
    "version": "1.0",
  
    "browser_action": {
     "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
  }