{
    "manifest_version": 2,
    "name": "Prankware",
    "description": "This extension allows for the setting of pranks.",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
     "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "cageImgs/*",
        "cursorFiles/*",
        "noNetwork.html"
    ]
  }