{
    "manifest_version": 2,
    "name": "Prankware Extension",
    "description": "This extension allows for the setting of pranks.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
     "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webRequestBlocking"
    ],
    "icons": { 
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "web_accessible_resources": [
        "cageImgs/*",
        "cursorFiles/*",
        "dogeImgs/*",
        "soundFiles/*",
        "noNetwork.html"
    ]
  }